<% include partials/header %>


		<form action="/reset/<%= token %>" method="POST">
            <legend>Resetar Senha</legend>
            <div id="form">
                <div class="form-group">
                    <label for="password">Nova Senha</label>
                    <input type="password" name="password" value="" placeholder="Nova Senha" autofocus="autofocus" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="confirm">Confirme Nova Senha</label>
                    <input type="password" name="confirm" value="" placeholder="Confirme Senha" class="form-control"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Atualizar Senha</button>
                </div>
            </div>  
		</form>


<% include partials/footer %>